<div {{action 'unhighlightFriend'}}>{{highlightedFriend.fullName}}</div>

<div id='sidebar'>
  <div id='calendar-top-left'></div>
  <div class='friends-list'>
  {{#each friend in friends}}
    {{friend-bar 
      friend=friend 
      sendMouseEnter='mouseoverFriend' 
      sendMouseLeave='mouseoffFriend'
      sendClick='highlightFriend'
    }}
  {{/each}}
  </div>

</div>

